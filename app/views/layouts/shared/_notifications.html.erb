<% if notice %>
  <script>
    $.notify({
      message: '#{notice}'
    }, {
      type: 'success',
      placement: {
        from: 'top', align: 'center'
      }
    });
  </script>
<% end %>

<% if alert %>
  <script>
    $.notify({
      message: '#{alert}'
    }, {
      type: 'success',
      placement: {
        from: 'top', align: 'danger'
      }
    });
  </script>
<% end %>
