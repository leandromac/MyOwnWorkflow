<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Payment</th>
      <th>Deadline</th>
      <th>Skill</th>
      <th>Member</th>
      <th>Description</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.client %></td>
        <td><%= order.payment %></td>
        <td><%= order.deadline %></td>
        <td><%= order.skill %></td>
        <td><%= order.member %></td>
        <td><%= order.description %></td>
        <td><%= order.price %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

