<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        Profile
      </div>
      <div class="panel-body">
          <p class="text-center"><%= @member.image %></p>
          <p class="text-center lead"><%= @member.name %> <br>
            <small style="font-size:14px" class="text-muted"><%= @member.skill.title %> / <%= @member.location %></small>
          </p>

          <p>
            <i class="fa fa-comments-o"></i> Feedback: <%= @member.feedback %><br>
            <i class="glyphicon glyphicon-hourglass"></i> Deadline: <%= @member.deadline %><br>
            <i class="fa fa-star-o"></i> Qualilty: <%= @member.quality %>
          </p>
          <hr>
          <p>
            <a href="http://<%= @member.portfolio %>" target="_blank" class="btn btn-block btn-social btn-vk">
                  <i class="fa fa-link"></i> Portfolio / Website
            </a>

            <a href="mailto:<%= @member.email %>" class="btn btn-block btn-social btn-tumblr">
                <i class="fa fa-envelope"></i> Email
            </a>

            <a class="btn btn-block btn-social btn-github">
                <i class="fa fa-github"></i> Github
            </a>
          </p>
      </div>

    </div>
  </div>

  <%= render partial: "form" %>
</div>


